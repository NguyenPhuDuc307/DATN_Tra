@model DehaAccountingMvc.Models.Accounting.ProductCategory

@{
    ViewData["Title"] = "Chỉnh sửa danh mục sản phẩm";
}

<div class="container-fluid pt-4 px-4">
    <div class="row">
        <div class="col-md-8 mx-auto">
            <div class="bg-light rounded p-4">
                <div class="d-flex align-items-center justify-content-between mb-4">
                    <h5 class="mb-0">@ViewData["Title"]</h5>
                    <a asp-action="Index" class="btn btn-secondary"><i class="fa fa-arrow-left me-2"></i>Quay lại</a>
                </div>

                <form asp-action="Edit">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    <input type="hidden" asp-for="Id" />
                    <input type="hidden" asp-for="CreatedDate" />
                    <input type="hidden" asp-for="CreatedBy" />

                    <div class="row mb-3">
                        <div class="col-md-6">
                            <div class="form-floating mb-3">
                                <input asp-for="CategoryCode" class="form-control" placeholder="Mã danh mục" required />
                                <label asp-for="CategoryCode"></label>
                                <span asp-validation-for="CategoryCode" class="text-danger"></span>
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="form-floating mb-3">
                                <input asp-for="Name" class="form-control" placeholder="Tên danh mục" required />
                                <label asp-for="Name"></label>
                                <span asp-validation-for="Name" class="text-danger"></span>
                            </div>
                        </div>
                    </div>

                    <div class="row mb-3">
                        <div class="col-md-6">
                            <div class="form-floating mb-3">
                                <select asp-for="ParentCategoryId" asp-items="ViewBag.ParentCategories"
                                    class="form-select">
                                    <option value="">-- Không có --</option>
                                </select>
                                <label asp-for="ParentCategoryId"></label>
                                <span asp-validation-for="ParentCategoryId" class="text-danger"></span>
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="form-floating mb-3">
                                <input asp-for="DisplayOrder" class="form-control" placeholder="Thứ tự hiển thị"
                                    type="number" min="0" />
                                <label asp-for="DisplayOrder"></label>
                                <span asp-validation-for="DisplayOrder" class="text-danger"></span>
                            </div>
                        </div>
                    </div>

                    <div class="form-floating mb-3">
                        <textarea asp-for="Description" class="form-control" placeholder="Mô tả"
                            style="height: 100px"></textarea>
                        <label asp-for="Description"></label>
                        <span asp-validation-for="Description" class="text-danger"></span>
                    </div>

                    <div class="form-check form-switch mb-3">
                        <input asp-for="IsActive" class="form-check-input" />
                        <label asp-for="IsActive" class="form-check-label"></label>
                    </div>

                    <div class="row mb-3">
                        <div class="col-md-6">
                            <div class="form-group">
                                <label>Ngày tạo:</label>
                                <input class="form-control" value="@Model.CreatedDate.ToString("dd/MM/yyyy HH:mm")"
                                    readonly />
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="form-group">
                                <label>Người tạo:</label>
                                <input class="form-control" value="@Model.CreatedBy" readonly />
                            </div>
                        </div>
                    </div>

                    <div class="d-grid gap-2 d-md-flex justify-content-md-end">
                        <a asp-action="Index" class="btn btn-secondary me-md-2">Hủy</a>
                        <button type="submit" class="btn btn-primary">Lưu</button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}