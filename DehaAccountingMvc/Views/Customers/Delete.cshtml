@model DehaAccountingMvc.Models.Accounting.Customer

@{
    ViewData["Title"] = "Xóa khách hàng";
}

<div class="card shadow-sm">
    <div class="card-header bg-white py-3">
        <h5 class="m-0 font-weight-bold text-primary">@ViewData["Title"]</h5>
    </div>
    <div class="card-body">
        <div class="alert alert-danger">
            <h5 class="alert-heading"><i class="bi bi-exclamation-triangle-fill me-2"></i>Xác nhận xóa</h5>
            <p>Bạn có chắc chắn muốn xóa khách hàng này? Hành động này không thể hoàn tác.</p>
        </div>

        <div class="row">
            <div class="col-md-6">
                <dl class="row">
                    <dt class="col-sm-4">@Html.DisplayNameFor(model => model.CustomerCode)</dt>
                    <dd class="col-sm-8">@Html.DisplayFor(model => model.CustomerCode)</dd>

                    <dt class="col-sm-4">@Html.DisplayNameFor(model => model.Name)</dt>
                    <dd class="col-sm-8">@Html.DisplayFor(model => model.Name)</dd>

                    <dt class="col-sm-4">@Html.DisplayNameFor(model => model.CustomerType)</dt>
                    <dd class="col-sm-8">@Html.DisplayFor(model => model.CustomerType)</dd>

                    <dt class="col-sm-4">@Html.DisplayNameFor(model => model.Phone)</dt>
                    <dd class="col-sm-8">@Html.DisplayFor(model => model.Phone)</dd>

                    <dt class="col-sm-4">@Html.DisplayNameFor(model => model.Email)</dt>
                    <dd class="col-sm-8">@Html.DisplayFor(model => model.Email)</dd>

                    <dt class="col-sm-4">@Html.DisplayNameFor(model => model.TaxCode)</dt>
                    <dd class="col-sm-8">@Html.DisplayFor(model => model.TaxCode)</dd>
                </dl>
            </div>
        </div>

        <form asp-action="Delete" class="mt-4">
            <input type="hidden" asp-for="Id" />
            <div class="d-flex">
                <a asp-action="Index" class="btn btn-secondary me-2">
                    <i class="bi bi-arrow-left me-1"></i> Quay lại
                </a>
                <button type="submit" class="btn btn-danger">
                    <i class="bi bi-trash me-1"></i> Xác nhận xóa
                </button>
            </div>
        </form>
    </div>
</div>