<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - DEHA Accounting</title>
    <script type="importmap"></script>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/DehaAccountingMvc.styles.css" asp-append-version="true" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.min.css">
    <link href="https://fonts.googleapis.com/css2?family=Poppins:wght@300;400;500;600;700&display=swap"
        rel="stylesheet">
    <style>
        body {
            font-family: 'Poppins', sans-serif;
            background-color: #f5f7fa;
            padding-bottom: 60px;
        }

        .navbar {
            padding: 0.8rem 1rem;
        }

        .navbar-brand {
            font-weight: 600;
            color: #2257bf !important;
        }

        .nav-link {
            padding: 0.5rem 1rem;
            border-radius: 0.375rem;
            margin-right: 0.5rem;
            font-weight: 500;
        }

        .nav-link:hover {
            background-color: rgba(13, 110, 253, 0.05);
        }

        .nav-link.active {
            background-color: rgba(13, 110, 253, 0.1);
            color: #0d6efd !important;
        }

        .dropdown-menu {
            box-shadow: 0 0.125rem 0.25rem rgba(0, 0, 0, 0.075);
            border: none;
            border-radius: 0.5rem;
        }

        .footer {
            background-color: #fff;
            padding: 1.5rem 0;
            position: relative;
            bottom: 0;
            width: 100%;
        }

        .btn {
            border-radius: 0.375rem;
        }

        .card {
            border-radius: 0.5rem;
            overflow: hidden;
        }
    </style>
</head>

<body>
    <header>
        <nav class="navbar navbar-expand-lg navbar-light bg-white border-bottom shadow-sm">
            <div class="container-fluid">
                <a class="navbar-brand d-flex align-items-center" asp-area="" asp-controller="Home" asp-action="Index">
                    <i class="bi bi-building-check text-primary me-2" style="font-size: 1.5rem;"></i>
                    <span>DEHA Accounting</span>
                </a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse"
                    aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-lg-inline-flex justify-content-between">
                    <ul class="navbar-nav">
                        <li class="nav-item">
                            <a class="nav-link text-dark @(ViewContext.RouteData.Values["Controller"]?.ToString() == "Home" && ViewContext.RouteData.Values["Action"]?.ToString() == "Index" ? "active" : "")"
                                asp-area="" asp-controller="Home" asp-action="Index">
                                <i class="bi bi-house-door me-1"></i> Trang chủ
                            </a>
                        </li>

                        <li class="nav-item dropdown">
                            <a class="nav-link dropdown-toggle text-dark @(ViewContext.RouteData.Values["Controller"]?.ToString() == "Products" || ViewContext.RouteData.Values["Controller"]?.ToString() == "ProductCategories" ? "active" : "")"
                                href="#" id="productDropdown" role="button" data-bs-toggle="dropdown"
                                aria-expanded="false">
                                <i class="bi bi-box-seam me-1"></i> Sản phẩm
                            </a>
                            <ul class="dropdown-menu shadow-sm py-2" aria-labelledby="productDropdown">
                                <li><a class="dropdown-item py-2" asp-area="" asp-controller="Products"
                                        asp-action="Index"><i class="bi bi-list-ul me-2 text-primary"></i>Danh sách sản
                                        phẩm</a></li>
                                <li>
                                    <hr class="dropdown-divider">
                                </li>
                                <li><a class="dropdown-item py-2" asp-area="" asp-controller="ProductCategories"
                                        asp-action="Index"><i class="bi bi-tag me-2 text-primary"></i>Danh mục sản
                                        phẩm</a></li>
                            </ul>
                        </li>

                        <li class="nav-item dropdown">
                            <a class="nav-link dropdown-toggle text-dark @(ViewContext.RouteData.Values["Controller"]?.ToString() == "Customers" || ViewContext.RouteData.Values["Controller"]?.ToString() == "Suppliers" ? "active" : "")"
                                href="#" id="partnerDropdown" role="button" data-bs-toggle="dropdown"
                                aria-expanded="false">
                                <i class="bi bi-people me-1"></i> Đối tác
                            </a>
                            <ul class="dropdown-menu shadow-sm py-2" aria-labelledby="partnerDropdown">
                                <li><a class="dropdown-item py-2" asp-area="" asp-controller="Customers"
                                        asp-action="Index"><i class="bi bi-person me-2 text-primary"></i>Khách hàng</a>
                                </li>
                                <li>
                                    <hr class="dropdown-divider">
                                </li>
                                <li><a class="dropdown-item py-2" asp-area="" asp-controller="Suppliers"
                                        asp-action="Index"><i class="bi bi-truck me-2 text-primary"></i>Nhà cung cấp</a>
                                </li>
                            </ul>
                        </li>

                        <li class="nav-item">
                            <a class="nav-link text-dark @(ViewContext.RouteData.Values["Controller"]?.ToString() == "InventoryMovements" ? "active" : "")"
                                asp-area="" asp-controller="InventoryMovements" asp-action="Index">
                                <i class="bi bi-box-arrow-in-down me-1"></i> Nhập xuất kho
                            </a>
                        </li>

                        <li class="nav-item dropdown">
                            <a class="nav-link dropdown-toggle text-dark @(ViewContext.RouteData.Values["Controller"]?.ToString() == "PurchaseOrders" || ViewContext.RouteData.Values["Controller"]?.ToString() == "SalesOrders" ? "active" : "")"
                                href="#" id="orderDropdown" role="button" data-bs-toggle="dropdown"
                                aria-expanded="false">
                                <i class="bi bi-file-earmark-text me-1"></i> Đơn hàng
                            </a>
                            <ul class="dropdown-menu shadow-sm py-2" aria-labelledby="orderDropdown">
                                <li><a class="dropdown-item py-2" asp-area="" asp-controller="PurchaseOrders"
                                        asp-action="Index"><i class="bi bi-cart-plus me-2 text-primary"></i>Đơn mua
                                        hàng</a>
                                </li>
                                <li>
                                    <hr class="dropdown-divider">
                                </li>
                                <li><a class="dropdown-item py-2" asp-area="" asp-controller="SalesOrders"
                                        asp-action="Index"><i class="bi bi-bag-check me-2 text-primary"></i>Đơn bán
                                        hàng</a>
                                </li>
                            </ul>
                        </li>
                    </ul>
                    <partial name="_LoginPartial" />
                </div>
            </div>
        </nav>
    </header>

    <div class="container-fluid py-4 px-4 mb-5">
        <main role="main">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted mt-4">
        <div class="container">
            <div class="row py-3">
                <div class="col-md-6">
                    <p class="mb-0">&copy; 2025 - <strong>DEHA Accounting</strong> - <a asp-area=""
                            asp-controller="Home" asp-action="Privacy">Privacy</a></p>
                </div>
                <div class="col-md-6 text-md-end">
                    <p class="mb-0">
                        <a href="https://dehavn.com.vn/" target="_blank" class="text-decoration-none text-muted">Công ty
                            Cổ phần DEHA Việt Nam</a>
                    </p>
                </div>
            </div>
        </div>
    </footer>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>

</html>
